def bubble_sort(l1):
    for i in range(0,len(l1)-1):
        for j in range(len(l1)-1):
            if(l1[j]>l1[j+1]):
                t = l1[j]
                l1[j] = l1[j+1]
                l1[j+1] = t
    return l1
l1 = [4, 1, 8, 6, 7, 2]  
print("unsorted: ", l1)  
print("sorted: ", bubble_sort(l1))
